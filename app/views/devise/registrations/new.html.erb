<div class="mx-auto max-w-7xl px-4 flex justify-center items-center h-screen">
    <div class="mt-2 sm:mx-auto sm:w-full sm:max-w-md relative"> <!-- Add relative positioning to the parent div -->
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10 relative"> <!-- Add z-index to bring this div forward -->
            <div class="z-30">
            <div class="pt-8">
              <h1 class="m-0 text-center font-bold tracking-tight text-7xl text-gray-900">Hello</h1>
              <h4 class="text-center mt-0 mb-12">Create your account</h4>
            </div>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="mb-4">
                <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "name@email.com", class: "mt-1 p-2 w-full rounded-md border border-gray-300 shadow-md shadow-gray-900/10 "%>
            </div>

            <div class="mb-4">
                <%= f.label :password, class: "block text-sm font-medium text-gray-700" %>
                <%= f.password_field :password, autocomplete: "current-password", class: "mt-1 p-2 w-full rounded-md border border-gray-300 shadow-md shadow-gray-900/10 " %>
            </div>

            <div class="mb-4">
                <%= f.submit "Submit", class: "w-full bg-purple-900 hover:bg-purple-800 focus:ring-4 focus:outline-none focus:ring-blue-300 text-white font-medium rounded-md text-sm py-2.5 shadow-md shadow-gray-900/10" %>
            </div>
            <% end %>
            <div class="text-sm text-center">
                Already have an account? <%= link_to "Log in", new_user_session_path, class: "no-underline font-bold text-purple-500 hover:underline" %>
            </div>
            </div>
        </div>
        <!-- Image positioned at the bottom right corner -->
        <%= image_tag "peeking cat-01.png", class: "w-40 absolute -top-20 right-0 overflow-hidden" %> <!-- Add absolute positioning and z-index to send the image behind other elements -->
    </div>
</div>