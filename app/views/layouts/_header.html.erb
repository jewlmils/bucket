<header class="fixed bg-white top-0 w-full shadow-md z-10"> <!-- Increase z-index to ensure it's above other content -->
        <nav class="container mx-auto px-6 py-3">
            <div class="flex justify-between items-center">
                <%= link_to "Bucket", categories_path, class: "no-underline text-2xl font-bold text-gray-800"%>
                <div class="hidden md:flex items-center space-x-4">
                    <% if user_signed_in? %>
                    <%= link_to "Create Bucket", new_category_path, class: "btn-secondary" %>
                    <%= link_to 'Log out', destroy_user_session_path, data: { "turbo-method": :delete}, class: "btn-main" %>
                    
                    <% else %>
                    <%= link_to 'Log in', new_user_session_path, class: "btn-secondary" %>
                    <%= link_to 'Sign up', new_user_registration_path, class: "btn-main" %>
                    <% end %>
                </div>
            </div>
        </nav>
</header>
