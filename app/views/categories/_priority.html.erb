<div class="flex flex-col h-full bg-white p-4 max-w-sm rounded-lg shadow-md" style="max-height: 85vh;"> <!-- Adjust the max-height as needed -->
  <h1 class="flex justify-start m-0">Priority</h1>
  <div class="overflow mt-4 mb-8 px-5" style="max-height: calc(100% - 2rem);"> <!-- Adjust the height as needed -->
    <div class="h-auto">
      <% if @priority_tasks.present? %>
        <% @priority_tasks.each do |task| %>
          <div class="mb-4">
            <%= render partial: 'tasks/task', locals: { task: task } %>
          </div>
        <% end %>
      <% else %>
        <div class="flex flex-col justify-center item-center text-center">
          <h4 class="text-gray-500 italic">You're all clear today!</h4>
          <%= image_tag "priority cat-01.png", class: "w-48 mx-auto d-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
