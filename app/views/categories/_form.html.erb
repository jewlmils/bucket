<%= form_for @category , class: "space-y-8 divide-gray-200" do |f| %>
  <div class="space-y-8 divide-y divide-gray-200">
    <div class="pt-8">
       <div>
        <% if @category.new_record? %>
          <h3 class="text-lg font-medium leading-6 text-gray-900">Add Bucket</h3>
          <p class="mt-1 text-sm text-gray-500">This form creates a new bucket.</p>
        <% else %>
          <h3 class="text-lg font-medium leading-6 text-gray-900">Edit Bucket</h3>
          <p class="mt-1 text-sm text-gray-500">This form edits the Bucket.</p>
        <% end %>
      </div>
    </div>
    
    <div class="mt-6 grid grid-cols-1 gapy-6 gap-x-4 sm:grid-cols-6">
      <div class="sm:col-span-6">
        <%= f.label :name %>
        <div class="mt-1">
          <%= f.text_field :name, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
        </div>
      </div>
      <div class="sm:col-span-6">
        <%= f.label :description %>
        <div class="mt-1">
          <%= f.text_area :description, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-300 focus:ring focus:ring-indigo-200 focus:ring-opacity-50" %>
        </div>
      </div>
    </div>
  </div>

  <div class="flex justify-end pt-5 gap-2">
    <%= link_to 'Cancel', categories_path, class: "border no-underline text-center align-middle select-none text-gray-900 px-3 py-1 rounded hover:bg-gray-900/10 active:bg-gray-900/20 disabled:pointer-events-none disabled:opacity-50 disabled:shadow-none lg:inline-block" %>
    <%= f.submit class: "cursor-pointer bg-blue-500 hover:bg-blue-700 text-white font-normal px-3 py-1 rounded" %>
  </div>
<% end %>
