<h1>CATEGORIES LIST</h1>

<%= button_to "Create category", new_category_path, method: :get %>

<h3>Empty categories</h3>
<ul>
<% @empty_categories.each do |category| %>
    <li><%= link_to category.name, category_path(category) %></li>
<% end %>
</ul>

<h3>Pending categories</h3>
<ul>
<% @pending_categories.each do |category| %>
    <li><%= link_to category.name, category_path(category) %></li>
<% end %>
</ul>

<h3>Completed categories</h3>
<ul>
<% @completed_categories.each do |category| %>
    <li><%= link_to category.name, category_path(category) %></li>
<% end %>

</ul>